<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FF50DC14"/>
            <stroke
                android:color="#ff3344"
                android:width="2dp"/>
            <corners
                android:radius="20dp"/>
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <solid android:color="#FFB4BEAF"/>
            <stroke
                android:color="#FF060606"
                android:width="1dp"/>
            <corners
                android:radius="2dp"/>
        </shape>
    </item>
</selector>